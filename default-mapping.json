{
  "settings": {
    "number_of_shards": 5,
    "number_of_replicas": 0,
    "analysis": {
      "analyzer": {
        "lowercase": {
          "type": "custom",
          "filter": " lowercase",
          "tokenizer":  "keyword"
        }
      }
    }
  },
  "mappings": {
    "_default_": {
      "properties": {
        "geometry": {
          "precision": "1m",
          "tree": "quadtree",
          "type": "geo_shape"
        },
        "uri": {
          "type": "keyword",
          "index": true
        },
        "id": {
          "store": true,
          "type": "keyword",
          "index": true
        },
        "type": {
          "type": "keyword",
          "index": true
        },
        "name": {
          "fields": {
            "analyzed": {
              "store": true,
              "type": "text",
              "index": true
            },
            "exact": {
              "analyzer": "lowercase",
              "store": true,
              "type": "text"
            }
          },
          "type": "text"
        },
        "dataset": {
          "type": "keyword",
          "index": true
        },
        "validSince": {
          "format": "date_optional_time",
          "type": "date"
        },
        "validUntil": {
          "format": "date_optional_time",
          "type": "date"
        }
      }
    }
  }
}
